.container.mt-5
  .row.justify-content-center
    .col-md-3
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.input :first_name, label: 'First Name', required: true, autofocus: true, input_html: { class: 'form-input block w-full mt-1' }
        = f.input :last_name, label: 'Last Name', required: true, input_html: { class: 'form-input block w-full mt-1' }
        = f.input :username, label: 'Username', required: true, input_html: { class: 'form-input block w-full mt-1' }
        = f.input :email, label: 'Email', required: true, input_html: { class: 'form-input block w-full mt-1' }
        = f.input :password, label: 'Password', required: true, input_html: { class: 'form-input block w-full mt-1' }
        = f.input :password_confirmation, label: 'Password Confirmation', required: true, input_html: { class: 'form-input block w-full mt-1' }
        .mt-3
          = f.button :submit, "Sign up", class: 'w-full btn btn-lg btn-primary'
      = render "devise/shared/links"